mixin button({text, type, isVisited, isLarge, withArrow})
  -
    let buttonClass = 'btn';

    const types = ['classic', 'transparent', 'url'];


    if(types.includes(type)) {
      buttonClass += ` btn--${type}`;
    }

    if(isVisited) {
      buttonClass += ` btn--${type}-visited`;
    }

    if(isLarge) {
      buttonClass += ` btn--large`;
    }

    if(withArrow) {
      buttonClass += ` btn--with-arrow`;
    }

  button(type='button' class=buttonClass)=text


    

