mixin dropdown(type, status, expanded, small, buttons)
  -  
    var rooms = ["спальни","кровати","ванные комнаты"];
    var peoples = ["взрослые","дети","младенцы"];
    if (type==2) {
      data = rooms
    } else {
      data = peoples
    };
    let dataId = 1;    
  .dropdown-description 
    .dropdown-description--left DROPDOWN
    .dropdown-description--right  #{status}
  .iqdropdown
    p(class="iqdropdown-selection" data-buttons = buttons  data-type=type data-expanded = expanded data-selection-text="Гость" data-text-plural="Гостей")
    div(class="iqdropdown-menu")
      each item in data        
        div(class="iqdropdown-menu-option" data-id="item"+dataId)
          - dataId +=1;
          div
            p(class="iqdropdown-item") #{item}
      div(class="iqdropdown-menu-control")
      
        