doctype html
html(lang="ru")
  head
    //meta charset="utf-8" - косяк синтаксиса, разобраться    
    style
      //include style.scss
    title 1
  body
    - var text_color = "#1F2041"  
    - 
      var color_array = [
        {style: "square square-dark-shade-100", data:"Dark Shade 100%"}, 
        {style: "square square-dark-shade-75", data:"Dark Shade 75%"},
        {style: "square square-dark-shade-50", data:"Dark Shade 50%"},
        {style: "square square-dark-shade-25", data:"Dark Shade 25%"},
        {style: "square square-dark-shade-5", data:"Dark Shade 5%"},
        {style: "square square-purple", data:"Purple"}]
    mixin div-square()
      each item in color_array
        div(class="div-color")
          div(class="div-color-block")
            div(class=item.style)
          div(class="div-color-text")
            p(class="text-color")=item.data
            p(class="text-color")=text_color
    div(class="container")      
        +div-square()