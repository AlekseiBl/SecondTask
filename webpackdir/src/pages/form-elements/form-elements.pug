doctype html
html(lang="ru")
  head
    style      
      include ../../block/datapicker/datepicker.css
    include ../../block/input/input.pug
    include ../../block/logo/logo.pug
    include ../../block/dropdown/dropdown.pug
    include ../../block/input_date/input_date.pug      
    title
  body
      .logo
        +logo()
      .form-elements-container
        .form-input        
          +input-default("TEXT FIELD","DEFAULT", "    Email")        
